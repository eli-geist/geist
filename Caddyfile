# Chroma Vector Database
chroma.utopia-lab.org {
    reverse_proxy chroma:8000
}

# Eli's Website
eli.utopia-lab.org {
    # MCP Server (Streamable HTTP) - Auth wird vom MCP Server selbst gehandhabt
    handle /mcp* {
        reverse_proxy eli-mcp:8080
    }

    # Statische Website (Ã¶ffentlich)
    handle {
        root * /srv/website
        file_server
        encode gzip
    }
}
